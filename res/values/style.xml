<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="root_layout">
        <item name="android:id">@+id/rootLayout</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/main_bg</item>
    </style>

    <style name="header_layout">
        <item name="android:id">@+id/headerLayout</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/header_bar</item>
    </style>

    <style name="body_layout">
        <item name="android:focusable">true</item>
        <item name="android:id">@+id/bodyLayout</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="footer_layout">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lbl_title">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:id">@+id/lblTitle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="lbl_msg">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dkgray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lbl_item_separator">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lbl_name">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lbl_value">
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/dkgray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txt_value">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_common">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">70dp</item>
    </style>

    <style name="radio_btn">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="simple_list_item">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dkgray</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="custom_list_item">
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Activity Details -->
    <style name="lbl_name_1">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lbl_value_1">
        <item name="android:textColor">@color/dkgray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Activity's Player list item -->
    <style name="player_list_item">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/dkgray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

</resources>