<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/body_bg"
    android:gravity="center"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_item_bg"
        android:gravity="center_vertical"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lblDay"
                style="@style/custom_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/ltblack"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/lblMonth"
                style="@style/custom_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Jan"
                android:textColor="@color/ltblack"
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.70"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/lblActivity"
                style="@style/custom_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:minLines="1"
                android:text="Title"
                android:textColor="@color/task"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/lblLocTime"
                style="@style/custom_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="Location Time"
                android:textColor="@color/sub_title"
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgAttendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:clickable="true"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:src="@drawable/chk_no_response" >
        </ImageView>
    </LinearLayout>

</LinearLayout>